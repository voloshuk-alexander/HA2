<% provide(:title, 'Home') %>
<div class="hotelstop">
<div id="carousel" class="carousel slide">
    <!--Индикаторы-->
    <ol class="carousel-indicators">
        <li class="active" data-target="#carousel" data-slide="0"></li>
        <li data-target="#carousel" data-slide="1"></li>
        <li data-target="#carousel" data-slide="2"></li>
        <li data-target="#carousel" data-slide="3"></li>
        <li data-target="#carousel" data-slide="4"></li>
    </ol>

    <!--Слайды-->
    <div class="carousel-inner">

        <div class="item active"><img src="http://placehold.it/300x240" align="middle" alt="">
            <div class="carousel-caption">
                <h3>Первый</h3>
                <p>Описание</p>
            </div>
        </div>
        <div class="item"><img src="http://placehold.it/300x240" align="middle" alt="">
            <div class="carousel-caption">
                <h3>Второй</h3>
                <p>Описание</p>
            </div>
        </div>
        <div class="item"><img src="http://placehold.it/300x240" align="middle" alt="">
            <div class="carousel-caption">
                <h3>Третий</h3>
                <p>Описание</p>
            </div>
        </div>
        <div class="item"><img src="http://placehold.it/300x240" align="middle" alt="">
            <div class="carousel-caption">
                <h3>Четвертый</h3>
                <p>Описание</p>
            </div>
        </div>
        <div class="item"><img  src="http://placehold.it/300x240" align="middle" alt="">
            <div class="carousel-caption">
                <h3>Пятый</h3>
                <p>Описание</p>
            </div>
        </div>
    </div>

    <!--Стрелки-->
    <a href="#carousel" class="left carousel-control" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a href="#carousel" class="right carousel-control" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
</div>
</div>
  <div class="hotelslist">
  <div class="container">

    <div class="row masonry" data-columns>

        <% @hotels.each do |hotels| %>

  <div class="hoelslistitem">
       <div class="thumbnail">
         <img src="<%= hotels.photo %>"  alt="">
          <div class="caption">
              <h3><a href="#"> <%= hotels.name %></a></h3>
              <p><%= hotels.description %></p>
            <%= link_to "Details", hotel_path(hotels.id) %>
           </div>
       </div>
   </div>




<% end %>
</div>
</div>
</div>
<div class="container thumbnail">
<nav >
    <ul class="pager">
<%= paginate @hotels %>
</ul>
</nav>
</div>
