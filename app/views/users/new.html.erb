<% provide(:title, 'Sign up') %>
<div class="container">
    <div class="row">
        <div class="thumbnail aligncenter">
            <h1>Sign In</h1>
        </div>
        <div class="thumbnail aligncenter">
          <%= simple_form_for :user, url: users_path do |f| %>
          <p><b>Name:</b></p>
           <%= f.input :name, label: false %>
            <p><b>Avatar:</b></p>
            <div style="margin-left:40%">
            <%= f.file_field :avatar %>
          </div>
            <p><b>e-Mail:</b></p>
           <%= f.input :email, label: false %>

           <p><b>Password:</b></p>
           <%= f.input :password, label: false %>

           <p><b>Confirmation:</b></p>
           <%= f.input :password_confirmation,label: false %>


           <%= f.button :submit, "Create account", class: "btn btn-large btn-primary" %>

            <% end %>
        </div>
    </div>
</div>
